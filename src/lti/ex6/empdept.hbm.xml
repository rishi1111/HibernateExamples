<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="lti.ex6">

	<class name="Department" table="depts">
		<id name="deptno">
			<generator class="assigned" /> <!--  user gives the value of id , unlike increment -->
		</id>
<!-- lazy loading , eager loading , and using fetch  -->
		<set name="employees" cascade="save-update,delete" inverse="true" fetch="join" lazy="false">
			<key column="deptno" on-delete="cascade" />

			<one-to-many class="Employee" />
		</set>
		<property name="name" type="string" length="30" />
		<property name="location" type="string" />

	</class>
	<class name="Employee" table="emps">

		<id name="empno">
			<generator class="assigned" />
		</id>
		<many-to-one name="dept" column="deptno" not-null="true" />
		<property name="name" type="string" length="30"  />
		<property name="salary" />
	</class>


</hibernate-mapping>